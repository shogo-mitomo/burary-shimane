<%= form_for(answer) do |f| %>
<% if answer.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

  <ul>
    <% answer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :spot_name, "紹介するスポットの名前" %>
  <%= f.text_field :spot_name, id: "spot_name_field"%>
</div>

<div class="field">
  <%= f.label :spot_detail, "コメント"%>
  <%= f.text_area :spot_detail %>
</div>

<div class="field">
  <%= f.label :image, "写真" %>
  <%= f.file_field :image %>
</div>

<div class="field">
  <%= f.label :address, "スポットの住所"%>
  <%= f.text_field :address, id: "spot_address_field" %>
</div>



<%= f.hidden_field :question_id %>

<div class="actions">
<%= f.submit  "回答する"%>
</div>
<% end %>
